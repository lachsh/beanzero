TopBar {
    background: $primary;
    height: 3;
    layout: horizontal;
}

#calendar {
    width: 1fr;
    background: $error;
}

ToBeBudgeted {
    width: auto;
    layout: horizontal;
    padding-left: 0;
    border-left: outer $foreground;
    background: $success;
}

#tbb-left {
    width: 3;
    content-align: center middle;
    background: $success-muted;
    color: $text;
    text-style: bold;
}

#tbb {
    width: auto;
    min-width: 25;
    text-align: right;
    background: $success-muted;
    padding: 0 1;
    color: $text-success;
}

ToBeBudgeted.negative {
    background: $error;
}
ToBeBudgeted.negative #tbb-left {
    background: $error-muted;
}
ToBeBudgeted.negative #tbb {
    color: $text-error;
    background: $error-muted;
}

Calendar {
    layout: grid;
    grid-size: 6 3;
    width: 24;
    background: $primary;
}

#year {
    column-span: 6;
    text-align: center;
    background: $accent;
    color: $text;
}

.month {
    width: 4;
    background: $primary-lighten-3;
    text-align: center;
    color: $text;
}
.month.odd {
    background: $primary-lighten-2;
}
.month.active {
    background: $accent-lighten-1;
}

TbbSummary {
    width: 1fr;
    layout: grid;
    grid-size: 2 3;
    grid-columns: 1fr auto;
    grid-gutter: 0 2;
    padding: 0 2;
}

TbbSummary .key {
    text-align: right;
    color: $text-muted;
    text-style: italic;
}
TbbSummary .value {
    text-align: right;
    color: $text;
    text-style: bold;
}

CategoryTable {
    height: 1fr;
    padding-top: 1;
}

AvailableBubble {
    width: 18;
    text-align: right;
}

CategoryTable Horizontal {
    width: 100%;
    height: 1;
    align-horizontal: center;
}

CategoryTable Horizontal:odd {
    background: $background-lighten-1;
}

CategoryTable Horizontal:hover  {
    background: $background-lighten-3;
}

CategoryTable Horizontal.category-group {
    background: $secondary;
    text-style: italic;
    color: $text;
    Amount {
        color: $text;
    }
}

CategoryTable Amount.zero {
    color: $foreground-muted;
}

CategoryTable Static, CategoryTable Amount {
    width: 18;
    height: 1;
    padding: 0 1;
    text-align: right;
}

CategoryTable Static {
    text-align: left;
    width: 16;
}